{
  "name": "Notification",
  "type": "object",
  "properties": {
    "user_id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "message": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": [
        "parking",
        "carpool",
        "transit",
        "reward",
        "promo"
      ]
    },
    "is_read": {
      "type": "boolean",
      "default": false
    },
    "action_url": {
      "type": "string"
    },
    "icon": {
      "type": "string"
    }
  },
  "required": [
    "title",
    "message",
    "type"
  ]
}